  echo "          Home Assistant Core - FreeNAS Plugin Service Menu           "
  echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
  echo -e "${end}\n"
}

